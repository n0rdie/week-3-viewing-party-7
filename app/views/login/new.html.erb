<h1>Log In</h1>

<% flash.each do |type, msg| %>
    <%= msg %>
<% end %>

<%= form_with url: "/login", method: :post, local: true do |form| %>
  <%= form.label :email, "Email:" %>
  <%= form.text_field :email, required: true %><br>
  <%= form.label :password, "Password:" %>
  <%= form.text_field :password, required: true %><br>
  <%= form.label :location, "Location:" %>
  <%= form.text_field :location, value: cookies[:location], required: false %><br>
  <%= form.submit "Log In" %>
<% end %>
